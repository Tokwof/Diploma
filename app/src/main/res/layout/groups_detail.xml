<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.ui_general.ItemDetailFragment">

    <TextView
        android:id="@+id/item_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textIsSelectable="true" />

    <include layout="@layout/common_intervals_row" />

    <Button
        android:id="@+id/add_intervals_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="clickAddIntevals"
        android:text="@string/adding_intervals" />

    <Button
        android:id="@+id/go_to_intervals_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="clickGoToIntevalsActivity"
        android:text="@string/goto_intervals" />

</LinearLayout>
