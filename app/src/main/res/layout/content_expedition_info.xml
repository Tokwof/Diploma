<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".ui.ui_general.ExpeditionInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/expeditionName_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textSize="8pt" />

        <TextView
            android:id="@+id/expeditionMission_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textSize="8pt" />

        <TextView
            android:id="@+id/firstDateAndLatitude_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textSize="8pt" />
    </LinearLayout>

    <!--header_for_list_days -->

    <ListView
        android:id="@+id/days_listView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <!--foooter_for_list_days -->


</android.support.v7.widget.LinearLayoutCompat>


